{
  "id": "graph",
  "initial": "idle",
  "states": {
    "idle": {
      "on": {
        "edit": {
          "actions": "toEdit",
          "target": "editting"
        },
        "addLabel": {
          "actions": "updateLabel"
        },
        "removeLabel": {
          "actions": "updateLabel"
        }
      }
    },
    "editting": {
      "on": {
        "cancel": {
          "actions": "toCancel",
          "target": "idle"
        },
        "save": [
          {
            "actions": "toIdle",
            "cond": "isValid",
            "target": "idle"
          },
          {}
        ]
      }
    }
  }
}
